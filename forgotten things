	 $text=$_POST['text'];
	$search=$_POST['searchfor'];
$replacewith=$_POST['replacewith'];


if(!empty($text) && !empty($search) && !empty($replacewith)){
			$text = str_replace($search, $replacewith, $text);
		
		}

echo $text;

